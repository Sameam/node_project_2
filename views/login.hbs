
<body class="bk">
  <div class="layout">
    <div class="container col-sm-3">
      <div class="login-container">
        <div class="container-fluid background bg-warning name">
          <h2>Welcome to<a class=login href="/"> HSS</a></h2><hr>
          <p>Sweat in exchange for harvestï¼Œ study to obtain the knowledge.</p><br>
          {{#if isAdminLogin}}
          <form action="/admin/login" method="post" novalidate>
            {{#each errorMessages}}
              <span style="color: red;">{{this}}</span>
            {{/each}}
            <div class="form-group">
                <label for="name">Name</label>
                <p><input type="text" id="name" name="name" size="32" class="form-control" /></p>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <p><input type="password" id="password" name="password" size="32" class="form-control" /></p>
                {{!-- Display flashed messages here if needed --}}
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="remember_me"> Remember Me
                </label>
            </div>
            <p><button type="submit" class="btn btn-primary">Submit</button></p>
          </form>
          {{else}}
          <form action="/login" method="post" novalidate>
            {{#each errorMessages}}
              <span style="color: red;">{{this}}</span>
            {{/each}}
            <div class="form-group">
              <label for="name">Name</label>
              <p><input type="text" id="name" name="name" size="32" class="form-control" /></p>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <p><input type="password" id="password" name="password" size="32" class="form-control" /></p>
                {{!-- Display flashed messages here if needed --}}
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="remember_me"> Remember Me
                </label>
            </div>
            <p><button type="submit" class="btn btn-primary">Submit</button></p>
            <p class="note pull-right"><a href="/register" style="color: black;">Register</a></p><br><br>
          </form>
          {{/if}}
        </div>
      </div>
    </div>  
  </div>
</body>
