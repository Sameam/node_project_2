<body>
  <div class="breadcrumbs">
    <div class="container">
      <h1>Welcome {{capitalize name}} to Admin Panel</h1>
    </div>
  </div>
  <main id="main">
    <div class="container">
      <h1>{{capitalize name}} Admin</h1>
      <h2>Students Information</h2>
      <hr>
      <table class="table users">
        <thead>
          <tr>
            <th scope="col">Student_ID</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Admin</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td scope="row">
                <a href="/admin/updateUser/{{this._id}}">{{this._id}}</a>
              </td>
              <td>{{capitalize this.name}}</td>
              <td>{{this.phone}}</td>
              <td>{{this.email}}</td>
              <td>{{this.admin}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>  
    </div>
  </main>
</body>